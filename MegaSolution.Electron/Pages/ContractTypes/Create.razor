@page "/contracttype/create/"
@attribute [Authorize(Roles = "Administrator")]
@inherits CreateBase

<h3 class="card-title">Créer type de contrat</h3>
<hr />
<br />
@if (!isSuccess)
{
    <ErrorMessage Message="Something Went Wrong With the Operation" />
}


<EditForm Model="Model" OnValidSubmit="CreateContractType">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="name">Libellé</label>
        <InputText @bind-Value="Model.ContractTypeName" class="form-control" id="name" />
    </div>

    <button class="btn btn-primary" type="submit">
        <span class="oi oi-pencil"></span>
        Créer type de contrat
    </button>
    <button @onclick="BackToList" class="btn btn-outline-secondary">
        <span class="oi oi-media-skip-backward"></span>
        Revenir sur la list
    </button>
</EditForm>