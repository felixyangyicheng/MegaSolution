        <li class="nav-item px-3">
            <NavLink class="nav-link" href="studios" >
                <span class="oi oi-camera-slr" aria-hidden="true"></span> Studios
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private bool expandSubmenuContract; 
    private bool expandSubmenuProfession;


    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
